{
  "name": "@spear-ai/tailwind-config",
  "version": "1.0.1",
  "description": "Spear AI Tailwind CSS config",
  "author": {
    "name": "Spear AI",
    "email": "org@spear.ai",
    "url": "https://spear.ai"
  },
  "type": "module",
  "dependencies": {
    "@ctrl/tinycolor": "^3.6.0",
    "@radix-ui/colors": "^1.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "param-case": "^3.0.4",
    "tailwind-scrollbar": "^3.0.4",
    "tailwindcss-animate": "^1.0.6",
    "ts-invariant": "^0.10.3"
  },
  "devDependencies": {
    "@spear-ai/eslint-config": "6.0.0",
    "@spear-ai/npm-package-json-lint-config": "1.0.5",
    "@spear-ai/prettier-config": "2.0.0",
    "eslint": "8.44.0",
    "graphql": "15.8.0",
    "npm-package-json-lint": "6.4.0",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.2",
    "tsup": "7.1.0",
    "typescript": "5.1.6"
  },
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "peerDependencies": {
    "tailwindcss": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "directory": "packages/eslint-config",
    "url": "https://github.com/spear-ai/ui.git"
  },
  "scripts": {
    "build": "tsup src --clean --dts --format cjs,esm src/index.ts",
    "dev": "yarn build --watch",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write .",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:npm",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:npm": "npmPkgJsonLint .",
    "lint:prettier": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "update": "yarn upgrade-interactive"
  },
  "types": "./dist/index.d.ts"
}
