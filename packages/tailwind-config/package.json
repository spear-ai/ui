  "description": "Spear AI Tailwind CSS config",
  "author": {
    "name": "Spear AI",
    "email": "org@spear.ai",
    "url": "https://spear.ai"
  },
  "type": "module",
  "dependencies": {
    "@mertasan/tailwindcss-variables": "^2.6.1",
    "@radix-ui/colors": "^1.0.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "colord": "^2.9.3",
    "param-case": "^3.0.4",
    "tailwind-scrollbar": "^3.0.4",
    "tailwindcss-3d": "^0.2.6",
    "tailwindcss-animate": "^1.0.6",
    "ts-invariant": "^0.10.3",
    "type-fest": "^4.1.0"
  },
  "devDependencies": {
    "@spear-ai/eslint-config": "9.0.0",
    "@spear-ai/npm-package-json-lint-config": "2.0.2",
    "@spear-ai/prettier-config": "2.0.3",
    "@types/mertasan__tailwindcss-variables": "2.6.0",
    "eslint": "8.46.0",
    "graphql": "15.8.0",
    "npm-package-json-lint": "7.0.0",
    "prettier": "3.0.0",
    "tailwindcss": "3.3.3",
    "tsup": "7.1.0",
    "typescript": "5.1.6"
  },
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "peerDependencies": {
    "tailwindcss": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "directory": "packages/eslint-config",
    "url": "https://github.com/spear-ai/ui.git"
  },
  "scripts": {
    "build": "tsup src --clean --dts --format cjs,esm src/index.ts",
    "dev": "yarn build --watch",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write .",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:npm",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:npm": "npmPkgJsonLint .",
    "lint:prettier": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "update": "yarn upgrade-interactive"
  },
  "types": "./dist/index.d.ts"
}
